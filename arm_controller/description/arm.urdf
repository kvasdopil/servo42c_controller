<?xml version="1.0"?>
<robot name="two_joint_arm">
  <!-- Base Link -->
  <link name="base">
    <visual>
      <geometry>
        <cylinder length=".5" radius="2"/>
      </geometry>
      <material name="black">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
  </link>

  <!-- First Link -->
  <link name="shoulder">
    <visual>
      <geometry>
        <box size="1 1 1"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 0.8 1"/>
      </material>
    </visual>
  </link>

  <!-- Second Link -->
  <link name="elbow">
    <visual>
      <geometry>
        <box size="1 1 5"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- First Joint -->
  <joint name="joint0" type="revolute">
    <parent link="base"/>
    <child link="shoulder"/>
    <origin xyz="0 0 1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="1"/>
  </joint>

  <!-- Second Joint -->
  <joint name="joint1" type="revolute">
    <parent link="shoulder"/>
    <child link="elbow"/>
    <origin xyz="1 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="1"/>
  </joint>
</robot>
